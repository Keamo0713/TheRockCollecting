
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/itemNameEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        android:hint="Stone Name" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/itemNameEditText"
        android:hint="Description                       (Cut,Clarity,Carat Weight)" />

    <EditText
        android:id="@+id/purchaseDateEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/descriptionEditText"
        android:hint="Purchase Date                   (e.g 12 May 2023)" />


    <EditText
        android:id="@+id/priceEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/purchaseDateEditText"
        android:hint="Price at Purchase              (100)" />


    <EditText
        android:id="@+id/categoryEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/purchaseDateEditText"
        android:layout_marginTop="40dp"
        android:hint="Category by cut                  (Poor,Good,Excelent)" />

    <Button
        android:id="@+id/captureImageButton"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="122dp"
        android:onClick="captureImage"
        android:src="@drawable/ic_camera"
        android:text="Capture Image" />

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/captureImageButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="112dp"
        android:src="@drawable/ic_item_placeholder" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Save" />
</RelativeLayout>