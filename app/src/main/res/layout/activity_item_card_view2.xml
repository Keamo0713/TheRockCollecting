<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/mStoneName"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="Stone Name"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mPurchaseDate"
                android:layout_width="163dp"
                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:text="Purchase Date"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mStoneDetails"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_margin="6dp"
                android:text="Stone Details"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mStoneCategory"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_margin="6dp"
                android:text="Stone Category"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sell" />

        </LinearLayout>

        <!-- Sell TextView -->
        <TextView
            android:id="@+id/forSaleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Sale"
            android:textColor="#FF0000"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
